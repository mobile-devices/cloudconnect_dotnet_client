@{
    ViewBag.Title = "CloudConnect Reader";
}
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
            </a><a class="brand" href="#">Map Tool</a>
            <form class="navbar-form" action="#">
            <input type="text" placeholder="asset" id="asset" value="@ViewBag.Imei" />
            <input type="hidden" id="autoload_asset" value="@ViewBag.Imei" />
            <input type="text" placeholder="date" id="date" value="@ViewBag.Date.ToString("dd/MM/yyyy")" />
            <button type="button" class="btn btn-success" id="bt_execute">
                Submit</button>
            <button type="button" class="btn btn-warning" id="bt_configure">
                <i class="icon-wrench icon-white"></i>
            </button>
            @*<input type="text" placeholder="Display all" id="nbValues" value="" />*@
            <button type="button" class="btn btn-info pull-right" id="bt_rawdata">
                Display all data</button>
            </form>
        </div>
    </div>
</div>
<div id="mainContainer" class="container-fluid" style="padding-top: 45px">
    <div id="map_canvas" style="width: 1175px; height: 500px; margin-left: auto; margin-right: auto">
    </div>
    <div id="table">
        <table class="table table-condensed table-bordered table-hover table-fixed-header">
            <thead id="headTable" class="header">
            </thead>
            <tbody id="bodyTable">
            </tbody>
        </table>
    </div>
</div>
<div id="modalConfig" class="modal hide fade" style="width: 580px">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            &times;</button>
        <h3>
            Your Personal Configuration</h3>
    </div>
    <div class="modal-body">
        <label>
            Choose Fields Display in Table</label>
        <select id="fieldsForTable" multiple="multiple" class="input-xxlarge" style="height: 125px">
        </select>
        <label>
            Choose Fields Display on the Map</label>
        <select id="fieldsForMap" multiple="multiple" class="input-xxlarge" style="height: 125px">
        </select>
        <label class="checkbox">
            <input type="checkbox" id="trackFeature">
            Activate track feature between table and map
        </label>
        <label class="checkbox">
            <input type="checkbox" id="clickFeature">
            Activate click feature between table and map
        </label>
        <label class="checkbox">
            <input type="checkbox" id="dBehavEvent">
            Display Driver Behavior Event on the map
        </label>
    </div>
    <div class="modal-footer">
        <button id="btResetConfig" class="btn btn-warning">
            <i class="icon-repeat icon-white"></i>Reset Configuration</button>
        <button id="btCloseConfig" class="btn btn-danger">
            Close</button>
        <button id="btSaveConfig" class="btn btn-primary">
            Save Changes</button>
    </div>
</div>
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
<script src="@Url.Content("~/Scripts/table-fixed-header.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jStorage.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/home.js")" type="text/javascript"></script>
